{
  "name": "Fresh Finder - Hide old eBay items",
  "version": "2.0",
  "description": "See original upload date and hide by age.",
  "manifest_version": 2,
  "incognito": "split",
  "permissions": ["tabs", "*://*.ebay.com/*"],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.ebay.com/b/*", "*://*.ebay.com/sch/*"],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "short_name": "Fresh Finder"
}