{
  "name": "True New",
  "version": "1.0",
  "description": "Hide all eBay listings that were uploaded longer than 4 days ago",
  "manifest_version": 2,
  "incognito": "split",
  "permissions": ["tabs", "*://*.ebay.com/*"],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.ebay.com/b/*", "*://*.ebay.com/sch/*"],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}